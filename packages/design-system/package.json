{
    "name": "design-system",
    "private": true,
    "version": "0.0.0",
    "main": "components/index.ts",
    "types": "dist/index.d.ts",
    "type": "module",
    "scripts": {
        "build": "tsup components/index.ts --format esm,cjs --dts --external react",
        "dev": "npm run build -- --watch",
        "lint": "eslint --ext .tsx,.ts ./",
        "lint:fix": "pnpm run lint --fix",
        "prettier": "prettier --check \"./**/*.{ts,tsx,scss}\"",
        "prettier:fix": "prettier --write \"./**/*.{ts,tsx,scss}\"",
        "stylelint": "stylelint \"./**/*.scss\"",
        "stylelint:fix": "stylelint --fix \"./**/*.scss\""
    },
    "dependencies": {
        "assets": "workspace:*",
        "styles": "workspace:*"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "devDependencies": {
        "@types/react": "^18.0.28",
        "@types/react-dom": "^18.0.11",
        "esbuild-sass-plugin": "^2.10.0",
        "eslint": "^8.40.0",
        "eslint-config-site": "workspace:*",
        "prettier": "^3.0.0",
        "sass": "^1.63.6",
        "stylelint": "^15.6.2",
        "stylelint-config-site": "workspace:*",
        "stylelint-config-standard-scss": "^10.0.0",
        "ts-config-site": "workspace:*",
        "tsup": "^7.1.0",
        "typescript": "^4.9.3"
    }
}
